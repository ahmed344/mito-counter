{
	"name": "mito-counter",
	"build": {
        "dockerfile": "Dockerfile"
    },
    
    "runArgs": [
        "--gpus", "all",
        "--shm-size=ll32g",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix"
    ],

    // New: This tells the container to use your specific display ID
    "containerEnv": {
        "DISPLAY": ":0"
    },

	// Configure tool-specific properties.
	"customizations": {
        // Configure the vscode.
        "vscode": {
            // Install the vscode extension.
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "ms-toolsai.jupyter",
                "njpwerner.autodocstring"
            ]
        }
        
    },

    // Mount the data directory in the container.
    "mounts": [
        "source=/home/ahmed/Data,target=/workspaces/mito-counter/data,type=bind,consistency=cached",
        "source=/home/ahmed/QP-projects,target=/workspaces/mito-counter/qp-projects,type=bind,consistency=cached"
    ]
}